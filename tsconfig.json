{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceRoot": "./src",
    "target": "ES2022",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "test", "*.ts"],
  "exclude": ["node_modules"]
}
